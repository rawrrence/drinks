<!DOCTYPE html>
<html>
<head>
  <title>Drinks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- NOTE: assumes bootstrap grid system -->
  <div class="wrapper">
    <!-- NAV BAR -->
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href=/home>Beverages and More</a>
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse collapse">
          <!-- .nav, .navbar-search, .navbar-form, etc -->
            <ul class="nav">
              <li><%= link_to "Orders", orders_path %></li>
              <li><%= link_to "Chambers", chambers_path %></li>
            </ul>
          </div>  
        </div>
      </div>
    </div>
    </div>
    <div class="container">
    </div>
  	<!-- MAIN CONTENT -->
  	<div class="container">
  		<div class="row">
  			<!-- main content placed here -->
  			<div class="span12">
          <% flash.each do |name, msg| %>
            <div class="alert alert-<%= :notice ? "success" : "error" %>">
              <a class="close" data-dismiss="alert">x</a>
              <%= msg %>
             </div> 
          <% end %>
  			  <div id="main_content">
  			   <%= yield %>
  			  </div>
  			</div>
  		</div>
  	</div>
  </div>
	
	<!-- FOOTER -->
	<footer id="footer">
    <div class="container">
      <%= render :partial => "partials/footer" %>   
    </div>
  </footer>

</body>
</html>
