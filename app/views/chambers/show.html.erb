<div class="row">
	<div class="span8">
		<h3>Chamber Details</h3>
		<br></br>
		<p>
			<h4>Chamber Number: </h4><%= @chamber.id -%>
		</p>
		<p>
			<% unless @chamber.substance == "" %>
				<% display = @chamber.substance %>
			<% else %>
				<% display = Empty %>
			<% end %>
			<h4>Substance: </h4><%= display -%>
		</p>
	</div>
</div>
<div class="form-actions">
  <%= link_to "Update Chamber", edit_chamber_path, :class => 'btn btn-primary' %>
</div>