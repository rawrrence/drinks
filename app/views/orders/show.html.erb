<div class="row">
	<div class="span8">
		<h3>Order Details</h3>
		<br></br>
		<p>
			<h4>Name: </h4><%= @order.name -%>
		</p>
		<br>
		<p>
			<h4>Ingredients</h4><br><br>
			<% if @order.ingredients.count != 0 %>
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						<th>Substance</th>
						<th>Amount</th>
					</tr>
					<% @order.ingredients.each do |i| %>
						<tr>
							<td><%= link_to i.chamber.substance, chamber_path(i.chamber) %></td>
							<td><%= i.amount %></td>
						</tr>
					<% end %>
					</tr>
				</table>
			<% else %>
				<h4>There are currently no ingredients</h4>
			<% end %>
		</p>
	</div>
</div>
<div class="form-actions">
  <%= link_to "Update Order", edit_order_path, :class => 'btn btn-primary' %>
  <%= link_to "Delete", order_path(@order), :method => 'delete', :confirm => 'Delete this order?', :class => 'btn btn-danger' %>
</div>