<div class="row">
  <div class="span2">
    <h3>Order History</h3>
    <br><br><%= link_to "Create Order", new_order_path, :class => 'btn btn-primary' %>
    <br></br>
    <% if @all_orders.count != 0 %>
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>Name</th>
        </tr>
        <% @all_orders.each do |o| %>
          <tr>
            <td><%= link_to o.name, order_path(o) %></td>
          </tr>
        <% end %>
        </tr>
      </table>
      <div class="flickr_pagination">
        <%= will_paginate @all_orders, :previous_label => "← Previous&nbsp;", :next_label => "&nbsp;Next →" %>
      </div>
  
    <% else %>
      <h4>There are currently no orders</h4>
    <% end %>
  </div>
</div>  